<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<!--
    帮助中心窗口布局文件
    使用 SplitPane 作为根容器，左侧显示文档列表，右侧显示文档内容
-->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.netpulse.netpulsefx.HelpController">
    <!-- 设置整体内边距 -->
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <!-- 顶部标题栏 -->
    <top>
        <VBox spacing="10.0" alignment="CENTER">
            <Label text="帮助中心" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-font-family: 'Microsoft YaHei', '微软雅黑', sans-serif;"/>
        </VBox>
    </top>

    <!-- 主要内容区域：使用 SplitPane 分割左右两部分 -->
    <center>
        <SplitPane fx:id="mainSplitPane" style="-fx-background-color: #f5f5f5;">
            <!-- 左侧：文档列表（固定宽度，确保标题完整显示） -->
            <VBox spacing="5.0" style="-fx-background-color: #ffffff;" 
                  minWidth="280.0" maxWidth="280.0" prefWidth="280.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                
                <Label text="文档列表" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Microsoft YaHei', '微软雅黑', sans-serif;"/>
                
                <ListView fx:id="documentListView" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- 右侧：文档内容显示区域 -->
            <VBox spacing="5.0" style="-fx-background-color: #ffffff;">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                
                <Label fx:id="documentTitleLabel" text="请选择文档" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-font-family: 'Microsoft YaHei', '微软雅黑', sans-serif;"/>
                
                <WebView fx:id="contentWebView" VBox.vgrow="ALWAYS" minWidth="600.0" minHeight="400.0"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>

